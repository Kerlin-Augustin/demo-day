<!doctype html>
<html>
<head>
    <title>MoneyPool</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body class="area">

  <main class="profile-main">
    <aside class="left-sidebar">
      <ul class="sideItems">
        <img src="images/cover.png" alt="">
        <!-- <h1><span class="fa fa-anchor"></span> MoneyPool</h1> -->
        <li class="welcome">Welcome, <%= user.local.firstName %>
            <%= user.local.lastName %>
        </li>
        <a href="/profile">
          <li>My Account</li>
        </a>
        <a href="/deposit">
          <li>Deposit</li>
        </a>
        <!-- <a href=""><li>Transfer</li></a> -->
        <a href="/invest">
          <li>Invest</li>
        </a>
        <!-- <a href=""><li>QR Code</li></a> -->
        <a href="/sendmoney">
          <li>Send/Request Money</li>
        </a>
        <a href="/settings">
          <li>Settings</li>
        </a>
        <a href="/logout">
          <li>Logout</li>
        </a>
      </ul>
    </aside>
   <aside class="right-sidebar">
     <form class="transaction" action="transact" method="POST">
       <h2>Cash Balance $<%= user.local.accountBalance %></h2>
       <select name="depositWithdraw" id="depositWithdraw">
         <option value="1">Deposits</option>
         <option value="-1">Withdraw</option>
       </select>
       <input type="number" name="amount">
       <a href="/settings"><h2>Linked Account</h2></a>
       <input class="depositButton" type="submit">
      </form>
   </aside>
  </main>

